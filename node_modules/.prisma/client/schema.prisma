generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WeeklyReport {
  id         Int      @id @default(autoincrement())
  userName   String
  role       String // 'student' only for now
  section    String // e.g., IT4R8, IT4R9
  studentId  String?
  weekNumber Int
  date       String
  hours      Int
  activities String
  score      Int
  learnings  String
  createdAt  DateTime @default(now())
}

model User {
  id        Int      @id @default(autoincrement())
  userName  String   @unique
  role      String // 'student' | 'coordinator' | 'chairman'
  approved  Boolean  @default(false)
  sections  String[] @default([]) // for students: e.g., ["IT4R8", "IT4R9"]
  studentId String?  @unique
  createdAt DateTime @default(now())
}

model StudentEnrollment {
  id          Int      @id @default(autoincrement())
  userName    String
  studentId   String   @unique
  section     String
  companyName String? // Added company name field
  createdAt   DateTime @default(now())

  @@index([section])
}

model Company {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
}

// New table: Keep coordinators separate from users/students
model Coordinator {
  id        Int      @id @default(autoincrement())
  userName  String   @unique
  sections  String[] @default([])
  approved  Boolean  @default(true)
  createdAt DateTime @default(now())
}
